<h1>Burgers</h1>

<h3 id="toEat">To Eat</h2>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
<br>

<h3 id="eating">Eating</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
<br>

<h3 id="addBurger">Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Type:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group" id="radio">
    <input type="radio" name="eat" value="0" checked>
  </div>

  <button type="submit">Add Burger</button>
</form>